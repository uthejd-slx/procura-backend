DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
ALLOW_NON_TLD_EMAILS=0
ALLOW_NUMERIC_PASSWORDS=0

# Set to "postgres" when running with docker-compose
DJANGO_DB_ENGINE=sqlite

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=procurement
POSTGRES_USER=procurement
POSTGRES_PASSWORD=procurement

# Used to build links in emails
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:4200

# Required if your frontend calls the API on a different origin (e.g. http://localhost:4200 -> http://localhost:8000)
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Microsoft Graph (Client Credentials flow)
GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
# Important:
# - set GRAPH_CLIENT_SECRET to the *secret VALUE* (not the secret ID)
# - if the value contains `#`, wrap it in quotes: GRAPH_CLIENT_SECRET="...#..."
GRAPH_CLIENT_SECRET=
GRAPH_SENDER=sender@yourtenant.com
GRAPH_SAVE_TO_SENT_ITEMS=0
GRAPH_TIMEOUT_SECONDS=30
GRAPH_MAX_RETRIES=3
GRAPH_RETRY_BACKOFF_SECONDS=1.0

# Optional: mirror in-app notifications to email (best-effort, uses Graph)
NOTIFICATIONS_SEND_EMAIL=0

# Logging
DJANGO_LOG_LEVEL=INFO
GRAPH_LOG_LEVEL=INFO

# BOM / Purchase Requests
# 0 => unlimited drafts per user
BOM_MAX_DRAFTS_PER_USER=15

# Purchase Orders
PO_NUMBER_PREFIX=PO-
PO_NUMBER_PADDING=5

# File uploads
MEDIA_URL=/media/
MEDIA_ROOT=./media
